@model ProductsAndCategories.Models.Association

<h1 class="text-center">@ViewBag.product.Name</h1>
<div class="row">
    <div class="col">
        <div class="text-center">
            <h3>Categories:</h3>
            <ul>
                @foreach(Association category in ViewBag.product.Categories)
                {
                    <li style="list-style-position: inside;">@category.Category.Name</li>
                }
            </ul>
        </div>
    </div>
    <div class="col">
        <div class="text-center">
            <form asp-action="AddCategory" asp-controller="Home" method="post">
                <label>Add Category:</label><br>
                <input type="hidden" asp-for="ProductId" value="@ViewBag.product.ProductId">
                <select asp-for="CategoryId" style="width: 40%;">
                    @{
                        foreach(Category category in ViewBag.categories)
                        {
                            <option value="@category.CategoryId">@category.Name</option>
                        }
                    }
                </select><br>
                <button class="btn btn-success my-2" type="submit">Add</button>
            </form>
        </div>
    </div>
</div>
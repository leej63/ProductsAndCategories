@model Category

<head>
    <link rel="stylesheet" href="~/css/products&categories.css">
</head>

<h1 class="text-center mb-5"><a href="/">Products</a> | Categories</h1>
<div class="row">
    <div class="col">
        <div>
            <h3>New Category</h3>
            <form asp-action="CreateCategory" asp-controller="Home" method="post">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name"><br>
                <button class="btn btn-success form-control" type="submit">Create</button>
                <span asp-validation-for="Name"></span>
            </form>
        </div>
    </div>
    <div class="col-2">
        <div class="divider"></div>
    </div>
    <div class="col">
        <div>
            <h3>Existing Categories</h3>
            @foreach(var category in ViewBag.allCategories)
            {
                <a class="underline" href="/categories/@category.CategoryId">@category.Name</a><br>
            }
        </div>
    </div>
</div>

